{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "ignore": [
            "CHANGELOG.md",
            "pnpm-lock.yaml",
            "package.json",
            "tsconfig.base.json",
            "wasm/**",
            "dist/**",
            "renegade-utils/**",
            "*.d.ts",
            "version.ts"
        ]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "error",
                "useExhaustiveDependencies": "error"
            },
            "performance": {
                "noDelete": "off"
            },
            "style": {
                "noNonNullAssertion": "off",
                "useShorthandArrayType": "error"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noConfusingVoidType": "off",
                "noExplicitAny": "off"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}
